<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:fitsSystemWindows="true"
              android:background="@color/white"
              android:padding="9dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageButton
            android:id="@+id/title_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titlebar_more"
            android:layout_gravity="center"
            android:src="@drawable/ic_drawer"
            android:background="@color/white"
            android:contentDescription="@string/titlebar_more"/>

    <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/titlebar_text"
            android:textSize="24sp"
    />

    <ImageButton
            android:id="@+id/title_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/titlebar_search"
            android:src="@drawable/ic_action_search"
            android:background="@color/white"
            android:contentDescription="@string/titlebar_search"
    />

</LinearLayout>
